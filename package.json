{
  "name": "nest-chat-app",
  "version": "1.0.0",
  "description": "NestJS Chat App",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "nest build && node dist/main"
  },
  "dependencies": {
    "@nestjs/common": "^8.1.0",
    "@nestjs/core": "^8.1.0",
    "@nestjs/platform-express": "^8.1.0",
    "@nestjs/platform-socket.io": "^8.1.0",
    "@nestjs/typeorm": "^8.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.2",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.3",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.4"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
